<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_white">

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewCancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/round_clear_black_48dp"
                android:background="@drawable/viencam"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/round_account_circle_black_48"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/ly_option_fistname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/vienxam">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Họ"
                    android:textSize="16sp"
                    android:textColor="#494848"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btn_fistname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Nguyễn"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/round_keyboard_arrow_right_black_48dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:id="@+id/ly_option_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/vienxam">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tên"
                    android:textSize="16sp"
                    android:textColor="#494848"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btn_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="A"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/round_keyboard_arrow_right_black_48dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/ly_option_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/vienxam">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Số điện thoại"
                    android:textSize="16sp"
                    android:textColor="#494848"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_numberphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/round_keyboard_arrow_right_black_48dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/ly_option_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/vienxam">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Địa chỉ"
                    android:textSize="16sp"
                    android:textColor="#494848"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/btn_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/round_keyboard_arrow_right_black_48dp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>